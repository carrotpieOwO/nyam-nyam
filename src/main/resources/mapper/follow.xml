<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carrot.nyam.repository.FollowRepository">

	<insert id="follow" parameterType="com.carrot.nyam.model.follow.dto.ReqFollowDto" >
		<selectKey resultType="int" keyProperty="id" order="BEFORE">
	        SELECT MAX(id)+1 FROM likes       
	    </selectKey>  
		insert into follow(fromUser, toUser, createDate) values(#{fromUserId}, #{toUserId}, now())
	</insert>
	
	<delete id="unfollow">
		delete from follow where id = #{id}
	</delete>
	
	<select id="findByFromUserAndToUser" resultType="com.carrot.nyam.model.follow.Follow">
		select * from follow where fromUser=#{fromUserId} and toUser=#{toUserId};	
	</select>
	
	<!-- 
	
	<select id="likeCount" resultType="int">
		select count(*) from likes where reviewId=#{reviewId};
	</select> -->
 	
</mapper>